// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "webpack-watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"base": "$ts-webpack-watch",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "."
					},
					"endsPattern": {
						"regexp": "webpack [\\d.]+ compiled"
					}
				},
			},
			"runOptions": {
				"instanceLimit": 1
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "webpack-compile",
			"type": "process",
			"command": "pnpm",
			"args": [
				"vsce",
				"package",
				"--no-dependencies"
			],
			"problemMatcher": {
				"base": "$ts-webpack-watch",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "."
					},
					"endsPattern": {
						"regexp": "webpack [\\d.]+ compiled"
					}
				},
			},
			"runOptions": {
				"instanceLimit": 1
			},
			"isBackground": true,
			"presentation": {
				"reveal": "always"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	]
}